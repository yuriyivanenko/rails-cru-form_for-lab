<h1>New Song Form</h1>

<%= form_for @song do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :artist_id %>
    <%= f.text_field :artist_id %>
  </div>

  <div class="field">
    <%= f.label :genre_id %>
    <%= f.text_field :genre_id %>
  </div>

  <div class="actions">
    <%= f.submit "Create Song" %>
  </div>
<% end %>

